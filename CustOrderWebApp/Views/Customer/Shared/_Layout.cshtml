@* This is a layout view. This view is shared by all the other child views
    This view will contain html, head, body tag and the child view will not contain these
    all the standard things such as: css, js , bootstrap file; navbar will be contained here*@

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title> @ViewBag.Title</title>
    <environment include="Development">
        <link href="~/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
    </environment>

    <script type="text/javascript">
        function Logout() {
            document.location.reload(true);
        }
       
    </script>
</head>

<body style="margin-top: 100px; background:lightgrey;">

    @*Import navigation menus for all our child views*@
    <nav class="navbar navbar-expand-xxl navbar-dark bg-dark fixed-top py-3" style="font-size: larger">
        <div class="container-fluid">
            <a class="navbar-brand"> Customer's Profile </a>

            @* When you click this button, the below div will expand and collapse *@
          
            <div  id="navbarSupportedContent">
                <ul class="navbar-nav me-auto md-2 mb-lg-0">
        
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger active w-auto" asp-controller="Customer" asp-action="LoginPage" onclick="Logout()"> LogOut </a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>

    <div class="container">
        @* We have to specify where you want to render your child views i.e from which location
            your child view will start rendering. So after rendering navbar, the child view will use
            this div to render its content *@
        @RenderBody()
    </div>
    @RenderSection("Scripts", false)

    <environment include="Development">
        <script src="~/js/bootstrap.js"></script>
        <script src="~/jquery/jquery.js"></script>
    </environment>
    <environment include="Production">
        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </environment>
</body>
</html>